@model IngredientNewViewModel

<form asp-action="Insert" method="post" role="form">
    <div class="form-group">
        <label asp-for="IngredientModel.Name" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="IngredientModel.Name" class="form-control" />
            <span asp-validation-for="IngredientModel.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="IngredientModel.Description" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="IngredientModel.Description" class="form-control" />
            <span asp-validation-for="IngredientModel.Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Vytvořit ingredienci" />
        </div>
    </div>
</form>