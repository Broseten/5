@page "/recipes"
@namespace CookBook.Web.Pages
@layout ListLayout
@inherits PageBase

<h1>Recipes</h1>

<table class="table border table-striped">
    <thead class="thead-light">
        <tr>
            <th scope="col" width="100px">Photo</th>
            <th scope="col">Name</th>
            <th scope="col">Food type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Recipes)
        {
            <tr>
                <td class="align-middle"><img src="@recipe.ImageUrl" style="width: auto; height:40px;"/> </td>
                <td class="align-middle"><NavLink href="@($"/recipe/{recipe.Id}")">@recipe.Name</NavLink></td>
                <td class="align-middle">@recipe.FoodTypeText</td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    <NavLink href="@("/recipe/create")" class="btn btn-primary">Create new recipe</NavLink>
</div>