@model RecipeNewViewModel

<form asp-action="New" method="post" role="form">
    <div class="form-group">
        <label asp-for="RecipeNewModel.Name" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="RecipeNewModel.Name" class="form-control" />
            <span asp-validation-for="RecipeNewModel.Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RecipeNewModel.Description" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="RecipeNewModel.Description" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DurationText" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="DurationText" type="time" placeholder="hh:mm:ss">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RecipeNewModel.FoodType" class="col-md-2"></label>
        <div class="col-md-5">
            <select asp-for="RecipeNewModel.FoodType"
                    asp-items="Html.GetEnumSelectList<FoodType>()">
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="RecipeNewModel.Ingredients" class="col-md-2"></label>
        <div class="col-md-5">
            <!--TODO: Add selection of Ingredients-->
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5">
            <input type="submit" class="btn btn-primary" value="Přidat recept" />
        </div>
    </div>
</form>