<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:views="clr-namespace:CookBook.Maui.App.Views"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:Class="CookBook.Maui.App.Views.MainView"
                       BackgroundColor="{DynamicResource SecondaryColor}"
                       x:Name="Root"
                       NavigationPage.Title="CookBook">
    <StackLayout Margin="10"
                 Spacing="10">
        <Button Text="Ingredients"
                Command="{Binding NavigateToIngredientListViewCommand}"/>
        <Button Text="Recipes"
                Command="{Binding NavigateToRecipeListViewCommand}"/>
    </StackLayout>
</views:ContentPageBase>
